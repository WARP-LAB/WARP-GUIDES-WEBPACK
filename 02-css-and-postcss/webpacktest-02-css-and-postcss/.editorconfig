# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,jsx,ts}]
indent_style = space
indent_size = 2

[*.{css,scss}]
indent_style = space
indent_size = 2

[*.{json,jsonc,yml}]
indent_style = space
indent_size = 2

[*.{glsl,frag,vert}]
indent_style = space
indent_size = 2

[*.{html,ejs}]
indent_style = space
indent_size = 2

[*.{php}]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
